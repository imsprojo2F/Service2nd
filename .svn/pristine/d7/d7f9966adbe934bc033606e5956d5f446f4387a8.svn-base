        };
        
        function deleteImg(obj){
        	
        	console.log(obj);
        	swal({
     			  title: "是否确定删除该图片?",
     			  text: "",

     			  type: "warning",

     			  showCancelButton: true,

     			  confirmButtonColor: "#DD6B55",

     			  confirmButtonText: "是",

     			  cancelButtonText: "否",

     			  closeOnConfirm: false,

     			  closeOnCancel: false

     			},

     			function(isConfirm){

     			  if (isConfirm) {
     				//debugger;
					var src = obj.id;
					var key = obj.src+',';
					var num = key.indexOf('user');
					var str = key.substring(num)+',';
					//src = src.replace(/\:80/g,'');
					src = src.replace(str,'');
					console.log(src+"-被替换");
     				$.ajax({
  					url:'newsUpdate',
  					type:'post',
  					dataType:'json',
  					cache:false,
  					data:{
  						'uid':obj.name,
  						'img':src
  						},
  					success:function(data){
  						if(data.code==1){
  							getSrc(obj.name);
  							swal("删除图片成功", "", "success");
  							
  						}else{
  							swal("删除图片失败", "稍后再试吧", "error");
  						}
  					}
  					
  				});

     			  } else {

     				    swal("您取消了删除操作", "", "error");

     			  }

     			});
        }
        
        function getSrc(uid){

        	var url = 'selectByKey';
        	$.ajax({
        		url:url,
        		type:'post',
        		dataType:'json',
        		cache:false,
        		data:{
        			'uid':uid
        		},
        		success:function(data){
        			$('#img').html('');
        			console.log(data.news);
        			var obj = data.news;
        			var src = obj.img;
        			var imgArr = src.split(',');
        			console.log(imgArr);
        			var len = imgArr.length-1;
        			for(var i=0;i<len;i++){
        				var pic = imgArr[i].substring(5);
        				//pic = pic.substring(pic.length-21,pic.length);
        				console.log(pic+'-数据库获取');
        				$('#img').append('<img src="'+pic+'" class="lazy" ondblclick="deleteImg(this);" name="'+obj.uid+'" id="'+src+'"  title="双击图片可删除" style="width:45%;margin:3px;cursor:pointer;border:1px solid #eee"/>');

        			}
        		}
        	});
        }

        
        function autoAdd(){
			$.ajax({
				url:'newsAdd',
				type:'post',
				dataType:'json',
				cache:false,
				data:{

				},
				success:function(data){
					$('#uid').val(data.message);
					$('#uid_').val(data.message);
				}
			});
		}



    </script>
